{{ form_start(form) }}
    <div class="md-form">
        {{ form_widget(form.title, {'attr': {'class': 'form-control validate'}}) }}
        {{ form_label(form.title) }}
        {{ form_errors(form.title) }}
    </div>
    <div class="md-form">
        {{ form_widget(form.price, {'attr': {'class': 'form-control validate'}}) }}
        {{ form_label(form.price) }}
        {{ form_errors(form.price) }}
    </div>
    <div class="md-form">
        {{ form_widget(form.description, {'attr': {'class': 'form-control validate'}}) }}
        {{ form_label(form.description) }}
        {{ form_errors(form.description) }}
    </div>
    <button class="btn btn-primary float-right">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}